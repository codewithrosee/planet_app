<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SolarSystemActivity">

    <ImageView
        android:id="@+id/sun"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_sun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mercury"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_mercury"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="1"
        app:layout_constraintCircleRadius="85dp" />

    <ImageView
        android:id="@+id/venus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_venus"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="1"
        app:layout_constraintCircleRadius="130dp" />

    <ImageView
        android:id="@+id/earth"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_earth"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="1"
        app:layout_constraintCircleRadius="190dp" />

    <ImageView
        android:id="@+id/moon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_moon"
        app:layout_constraintCircle="@id/earth"
        app:layout_constraintCircleAngle="65"
        app:layout_constraintCircleRadius="40dp" />

    <ImageView
        android:id="@+id/mars"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_mars"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="1"
        app:layout_constraintCircleRadius="250dp" />

    <ImageView
        android:id="@+id/jupiter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_jupiter"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="1"
        app:layout_constraintCircleRadius="320dp" />

    <ImageView
        android:id="@+id/saturn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_saturn"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="350dp" />

    <ImageView
        android:id="@+id/uranus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_uranus"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="160"
        app:layout_constraintCircleRadius="350dp" />


    <ImageView
        android:id="@+id/neptune"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_neptune"
        app:layout_constraintCircle="@id/sun"
        app:layout_constraintCircleAngle="140"
        app:layout_constraintCircleRadius="360dp" />


</androidx.constraintlayout.widget.ConstraintLayout>